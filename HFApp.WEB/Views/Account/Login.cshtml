@model HFApp.WEB.Models.Domain.Dtos.AccountDto
@{
}
<h1>Login</h1>
<form method="post">
    <!-- Email input -->
    <div class="form mb-4">
        <input type="text" id="form-user" class="form-control" asp-for="UserName" />
        <label class="form-label" for="form-user">user name</label>
    </div>

    <!-- Password input -->
    <div class="form mb-4">
        <input type="password" id="form-pass" class="form-control" asp-for="Password" />
        <label class="form-label" for="form-pass">Password</label>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-dark">Login</button>

    <input type="hidden" asp-for="ReturnUrl" />

</form>